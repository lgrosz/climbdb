BEGIN;

SELECT plan(38);

SELECT has_table( 'topos' );
SELECT col_is_pk( 'topos', 'id' );
SELECT col_type_is( 'topos', 'id', 'integer' );

SELECT has_column ( 'topos', 'title' );
SELECT col_type_is( 'topos', 'title', 'text' );

SELECT has_column ( 'topos', 'width' );
SELECT col_type_is( 'topos', 'width', 'double precision' );
SELECT col_not_null( 'topos', 'width' );

SELECT has_column ( 'topos', 'height' );
SELECT col_type_is( 'topos', 'height', 'double precision' );
SELECT col_not_null( 'topos', 'height' );

-- image features

SELECT has_table( 'topo_image_features' );

SELECT has_column( 'topo_image_features', 'id' );
SELECT col_is_pk( 'topo_image_features', 'id' );
SELECT col_type_is( 'topo_image_features', 'id', 'integer' );

SELECT has_column( 'topo_image_features', 'source_crop' );
SELECT col_type_is( 'topo_image_features', 'source_crop', 'box' );

SELECT has_column( 'topo_image_features', 'dest_crop' );
