SELECT has_column( 'topo_path_features', 'topo_id' );
SELECT col_type_is( 'topo_path_features', 'topo_id', 'integer' );
SELECT fk_ok( 'topo_path_features', 'topo_id', 'topos', 'id' );

SELECT * FROM finish();

ROLLBACK;
